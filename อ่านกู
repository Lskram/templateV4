    ; }
    (ถ้าก็อปไปก็ลบคอมเม้นท์ออก)
    function love.load()
        local world = map.load("maps/map.lua", {})
    end

    function love.update(dt)
        map.update(dt)
    end

    function love.draw()
        map.draw()
    end

